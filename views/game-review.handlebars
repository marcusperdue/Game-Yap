<section class="flex flex-col items-center justify-center">
    <article class="text-center">
        <div class="flex justify-center items-center h-screen"> <!-- Use Tailwind classes to center content -->
            <div class="game-image-container" style="height: 500px; overflow: hidden;">
                <img src="{{ gameImage }}" alt="{{ gameTitle }}" class="game-image" style="width: 100%; height: 100%; object-fit: cover;">
            </div>
        </div>

        <h2 class="text-white">{{ gameTitle }}</h2>
        <!-- Display Game Summary with smaller font size -->
        <div class="game-summary text-white">
            <h3 class="text-white">Summary</h3>
            <p class="text-white">{{{ gameSummary }}}</p>
        </div>
    </article>
    {{#if isAuthenticated}}
    <!-- Display Comment Form -->
    <form action="/post-comment" method="POST">
        <textarea name="commentText" placeholder="Write a comment"></textarea>
        <button type="submit">Submit Comment</button>
    </form>
    {{else}}
    <p>Sign in to leave a comment</p>
    {{/if}}

    <!-- Display Comments -->
    <section class="comments-section text-center mt-4">
        <h3 class="text-white">Comments</h3>
        <div id="commentList">
            {{#each comments}}
            <div class="text-white comment">
                <p class="text-white">{{text}}</p>
                <p class="text-white">{{user.username}}</p>
            </div>
            {{/each}}
        </div>
    </section>
</section>
